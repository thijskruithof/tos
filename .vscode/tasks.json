{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build kernel",
            "command": "/usr/bin/make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Launch Qemu",
            "command": "qemu-system-x86_64",
            "args": [
                "-drive", 
                "file=bin/tos.img",
                "-m 256M",
                "-cpu qemu64",
                "-drive if=pflash,format=raw,unit=0,file=\"external/OVMF/OVMF_CODE-pure-efi.fd\",readonly=on",
                "-drive if=pflash,format=raw,unit=1,file=\"external/OVMF/OVMF_VARS-pure-efi.fd\"",
                "-net none"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build kernel"
        }
    ]
}